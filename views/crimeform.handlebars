<div class="row">
    <div class="col 6 md grey lighten-4">
        <div class="panel panel-default">

            <div class="panel-heading">
                <h4 class="panel-title">REPORT A CRIME</h4>
            </div>

            <div class="panel-body col s12">
                <form role="form">
                    <div class="form-group">
                        <div class="input-field col s12">
                            <select>
                                <option value="" disabled selected>Choose your option</option>
                                <option value="1">Theft</option>
                                <option value="2">Burglary</option>
                                <option value="3">Robbery</option>
                                <option value="4">Assualt</option>
                                <option value="3">Motor Vehicle Theft</option>
                            </select>
                            <label>Type of Crime</label>
                        </div>

                        <div class="col s12 location">
                            <label for="Location">Location</label>
                            <input type="text" class="form-control" id="location">
                        </div>


                        <div class="input-fiel">
                            <label for="date">Date of incident</label>
                            <input type="date" class="datepicker">
                        </div>

                        <div class="input-field col s12">
                            <form class="col s12">
                                <div class="row">
                                    <div class="input-field col s12">
                                        <i class="material-icons prefix">mode_edit</i>
                                        <textarea id="icon_prefix2" class="materialize-textarea"></textarea>
                                        <label for="icon_prefix2">Crime Description</label>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <div class="report-btn">
                            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                        <br>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
